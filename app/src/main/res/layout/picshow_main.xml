<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.picshow.app.PicShowActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toobar_height"
        android:background="@color/colorPrimary"
        app:title="@null"
        >
        <Button
            android:id="@+id/btn_photo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="@dimen/max_front_size"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorTopbar"
            android:text="@string/btn_photo"/>

        <Button
            android:layout_width="@dimen/topbar_padding"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="@dimen/bigger_front_size"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:text="@null"/>

        <Button
            android:id="@+id/btn_album"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="@dimen/max_front_size"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorTopbar"
            android:text="@string/btn_album"/>
    </android.support.v7.widget.Toolbar>

    <android.support.v4.view.ViewPager
        android:id="@+id/vpager"
        android:layout_marginTop="@dimen/toobar_height"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

</android.support.constraint.ConstraintLayout>
