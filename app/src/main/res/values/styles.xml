<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AlbumActivity" parent = "@style/AppTheme">
        <item name="android:homeAsUpIndicator">@drawable/ic_launcher_background</item>
    </style>

    <style name="PhotoPageActivity" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="tanyu_popup_window_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_popup_window_in</item>
        <item name="android:windowExitAnimation">@anim/anim_popup_window_out</item>
    </style>

</resources>
